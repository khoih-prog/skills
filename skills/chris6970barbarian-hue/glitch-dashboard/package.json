{
  "name": "glitch-dashboard",
  "version": "3.0.0",
  "description": "Unified system management dashboard for OpenClaw agents",
  "main": "main.js",
  "bin": {
    "glitch-dashboard": "./bin/dashboard.js"
  },
  "scripts": {
    "start": "node main.js",
    "install:linux": "./scripts/install-linux.sh",
    "install:macos": "./scripts/install-macos.sh",
    "install:windows": "powershell ./scripts/install-windows.ps1",
    "service:install": "node scripts/install-service.js",
    "service:uninstall": "node scripts/uninstall-service.js",
    "build": "pkg . --out-path=dist/"
  },
  "pkg": {
    "scripts": ["main.js", "lib/**/*.js"],
    "assets": ["web/**/*"],
    "targets": ["node18-linux-x64", "node18-macos-x64", "node18-win-x64"]
  },
  "keywords": ["openclaw", "dashboard", "system-monitor", "task-queue"],
  "author": "Glitch",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
