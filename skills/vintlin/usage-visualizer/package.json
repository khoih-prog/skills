{
  "name": "usage-visualizer",
  "version": "1.1.3",
  "description": "Advanced usage statistics and high-fidelity visual reporting for OpenClaw. 100% local processing.",
  "main": "scripts/run_usage_report.py",
  "scripts": {
    "fetch": "python3 scripts/fetch_usage.py",
    "report": "python3 scripts/report.py",
    "report:image": "python3 scripts/run_usage_report.py --mode image --period today",
    "report:text": "python3 scripts/run_usage_report.py --mode text --period today"
  },
  "keywords": [
    "openclaw",
    "usage",
    "analytics",
    "visualizer",
    "local-first"
  ],
  "author": "VintLin",
  "license": "MIT",
  "homepage": "https://github.com/VintLin/llm-cost-monitor",
  "repository": {
    "type": "git",
    "url": "https://github.com/VintLin/llm-cost-monitor"
  },
  "openclaw": {
    "emoji": "ðŸ“Š",
    "os": [
      "darwin",
      "linux"
    ],
    "requires": {
      "bins": [
        "python3",
        "chromium"
      ],
      "env": [
        "OPENCLAW_WORKSPACE"
      ]
    },
    "install": [
      {
        "id": "pip-deps",
        "kind": "exec",
        "command": "pip3 install -r requirements.txt",
        "label": "Install Python dependencies"
      }
    ]
  }
}
