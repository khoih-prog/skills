{
  "name": "markdown-editor-with-chat",
  "version": "1.1.2",
  "description": "Lightweight markdown editor with optional OpenClaw gateway chat. Filesystem-based, no database required.",
  "author": "telegraphic-dev",
  "license": "MIT",
  "repository": "https://github.com/telegraphic-dev/markdown-editor-with-chat",
  "keywords": [
    "markdown",
    "editor",
    "chat",
    "openclaw",
    "pearls"
  ],
  "env": {
    "MARKDOWN_DIR": {
      "required": true,
      "description": "Directory containing markdown files to serve"
    },
    "PORT": {
      "required": false,
      "default": "3333",
      "description": "Server port"
    },
    "HOST": {
      "required": false,
      "default": "127.0.0.1",
      "description": "Server host (localhost only for security)"
    },
    "OPENCLAW_GATEWAY_URL": {
      "required": false,
      "sensitive": false,
      "description": "OpenClaw gateway URL for chat feature"
    },
    "OPENCLAW_GATEWAY_TOKEN": {
      "required": false,
      "sensitive": true,
      "description": "OpenClaw gateway auth token"
    }
  },
  "scripts": {
    "start": "node scripts/server.mjs"
  }
}
