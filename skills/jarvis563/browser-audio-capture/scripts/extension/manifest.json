{
  "manifest_version": 3,
  "name": "Percept Audio Capture",
  "version": "1.0.2",
  "description": "Capture tab audio for Percept AI transcription pipeline",
  "permissions": [
    "tabCapture",
    "activeTab",
    "offscreen"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
